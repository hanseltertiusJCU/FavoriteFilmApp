<?xml version="1.0" encoding="UTF-8"?>
<!-- Ripple ini brguna untuk pasang ripple effect ke dalam rectangle shape (berguna juga untuk API < 23) -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">
    <!-- Item ini berguna untuk mask item yang ada-->
    <item android:id="@android:id/mask">
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" /> <!-- Color untuk ripple effect ketika d click -->
        </shape>
    </item>
    <!-- Item sbg target dari mask -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2px"
                android:color="@android:color/darker_gray" />
        </shape>
    </item>
</ripple>
