<resources>

    <!-- Base application theme. Set AppCompatLight for black content color -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Set status bar color as well as its text color
        (adjusted from status bar color) in there
        (applied for API 23+, before that status bar will be white) -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Style untuk menampung progress bar -->
    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/progress_bar_width</item>
        <item name="android:layout_height">@dimen/progress_bar_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Style untuk menampung item text -->
    <style name="ItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style untuk menampung poster image -->
    <style name="PosterImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Style untuk menampung circle image view poster image -->
    <style name="CirclePosterImage">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Style untuk menampung empty data text -->
    <style name="NoDataText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Style untuk menampung isi dari detailed text -->
    <style name="DetailedText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/inner_view_margin</item>
        <item name="android:layout_marginRight">@dimen/inner_view_margin</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DetailedSectionTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_section_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
    </style>

    <style name="DetailedSectionContentText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
